<a href="/">Back</a>

<h1><%= @student.name %></h1>

<table border="1">
  <thead>
    <tr>
      <th>Assignment</th>
      <th>Turned In?</th>
      <th>Score</th>
      <th>Adjusted Score</th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |a| %>
      <tr>
        <td><a href="/assignments/<%= a.id %>"><%= a.title %></a></td>
        <td><%= @student.turned_in_assignment?(a) %></td>

        <!-- The score and adjusted scores aren't here at all. -->
        <!-- It's for you to complete on your own. -->
        <td><%= @student.grade_for_assignment(a) %></td>
        <td><%= @student.adjusted_grade_for_assignment(a) %></td>
      </tr>
    <% end %>
  </tbody>
</table>